<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginLeft="10dp">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="160dp"
            android:src="@drawable/cartoons_classification_cartoonsbook1"
            android:id="@+id/cartoons_classification_cartoonsbook_src" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:maxLines="1"
            android:text="漫画名字要长一点就好"
            android:ellipsize="end"
            android:id="@+id/cartoons_classification_cartoonsbook_bookname"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="#808080"
            android:maxLines="1"
            android:text="作者名字也要长一点才好"
            android:ellipsize="end"
            android:id="@+id/cartoons_classification_cartoonsbook_author"
            />

</LinearLayout>