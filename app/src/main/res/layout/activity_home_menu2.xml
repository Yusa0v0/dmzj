<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <Button
        android:id="@+id/home_btn1"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:textColor="@color/black"
        android:layout_marginTop="254dp"
        android:text="小说订阅"
        android:drawableLeft="@mipmap/mangasub1"
        android:background="#252525"
        />
    <Button
        android:id="@+id/home_btn2"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:textColor="@color/black"
        android:layout_marginTop="0dp"
        android:text="浏览记录"
        android:textSize="23sp"
        android:drawableLeft="@mipmap/history"
        android:background="#252525"/>
    <Button
        android:id="@+id/home_btn3"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:textColor="@color/black"
        android:layout_marginTop="0dp"
        android:text="小说下载"
        android:textSize="23sp"
        android:drawableLeft="@mipmap/download"
        android:background="#252525"/>
    <Button
        android:id="@+id/home_btn4"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:textColor="@color/black"
        android:layout_marginTop="0dp"
        android:text="小说评论"
        android:textSize="23sp"
        android:drawableLeft="@mipmap/comment"
        android:background="#252525"/>

</LinearLayout>