<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:layout_alignParentTop="true"
        android:id="@+id/top_page_iv"
        android:layout_width="match_parent"
        android:layout_height="230dp"
        android:scaleType="centerCrop"
        android:src="@drawable/background" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        app:cardCornerRadius="70dp">
        <ImageView
            android:id="@+id/head_iv"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/head"
            android:stateListAnimator="@null" />
    </com.google.android.material.card.MaterialCardView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp"
        >

        <TextView
            android:id="@+id/btn_change"
            android:layout_width="80dp"
            android:layout_height="34dp"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text="编辑头像" />

        <TextView
            android:id="@+id/about_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="250dp"
            android:text="用户名"
            android:textSize="23sp"
            android:textStyle="bold" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="280dp"
            android:background="@color/gray" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="252dp"
            android:src="@drawable/arrow_forward" />

        <TextView
            android:id="@+id/about_note"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="300dp"
            android:text="签名"
            android:textSize="23sp"
            android:textStyle="bold" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="342dp"
            android:background="@color/gray"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/arrow_forward"
            android:layout_alignParentRight="true"
            android:layout_marginTop="313dp"/>

        <TextView
            android:id="@+id/about_sex"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="350dp"
            android:text="性别"
            android:textStyle="bold"
            android:textSize="23sp"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="386dp"
            android:background="@color/gray"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/arrow_forward"
            android:layout_alignParentRight="true"
            android:layout_marginTop="363dp"/>

        <TextView
            android:id="@+id/about_birth"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="400dp"
            android:text="生日"
            android:textStyle="bold"
            android:textSize="23sp"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="440dp"
            android:background="@color/gray"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="410dp"
            android:src="@drawable/arrow_forward" />

        <TextView
            android:id="@+id/about_star"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="446dp"
            android:text="星座"
            android:textStyle="bold"
            android:textSize="23sp"
            />


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="480dp"
            android:background="@color/gray"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/arrow_forward"
            android:layout_alignParentRight="true"
            android:layout_marginTop="453dp"/>

        <TextView
            android:id="@+id/about_bloodtype"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="500dp"
            android:text="血型"
            android:textStyle="bold"
            android:textSize="23sp"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="532dp"
            android:background="@color/gray"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/arrow_forward"
            android:layout_alignParentRight="true"
            android:layout_marginTop="503dp"/>

        <TextView
            android:id="@+id/about_root"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="583dp"
            android:text="密码"
            android:textSize="23sp"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/arrow_forward"
            android:layout_alignParentRight="true"
            android:layout_marginTop="590dp"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="615dp"
            android:background="@color/gray"/>
    </RelativeLayout>

</RelativeLayout>