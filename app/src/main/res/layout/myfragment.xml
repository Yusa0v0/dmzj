<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

        <com.youth.banner.Banner
            android:id="@+id/banner"
            android:layout_width="match_parent"
            android:layout_height="220dp"
            app:image_scale_type="center_inside"
            app:indicator_height="8dp"
            app:indicator_margin="5dp"
            app:indicator_width="8dp" >
        </com.youth.banner.Banner>

        <androidx.recyclerview.widget.RecyclerView
            android:layout_below="@+id/banner"
            android:id="@+id/recyclerNewsRecommend"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    <ImageView
        android:id="@+id/recommend_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/recommend_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="10dip" />

    <ImageView
        android:id="@+id/recommend_zan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/recommend_author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/recommend_authorName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
</RelativeLayout>
